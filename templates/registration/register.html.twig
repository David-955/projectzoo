{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<h1 class="h3 mb-3 font-weight-normal">Register</h1>

{{ form_start(registrationForm) }}
    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
    <button class="btn btn-lg btn-primary" type="submit">Register</button>
{{ form_end(registrationForm) }}

<p>Already have an account? <a href="{{ path('app_login') }}">Sign in</a></p>
{% endblock %}
